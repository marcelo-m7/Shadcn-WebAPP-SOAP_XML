{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "dev": { 
      "cache": false, 
      "persistent": true,
      "passThroughArgs": ["--port"]
    },
    "build": { "dependsOn": ["^build"], "outputs": ["dist/**"] },
    "lint": { "outputs": [] },
    "test": { "dependsOn": ["build"], "outputs": [] }
  }
}